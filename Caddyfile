tumensugalaa.mn, www.tumensugalaa.mn {
  encode gzip
  root * /srv
  file_server

  @api path /api/*
  handle @api {
    uri strip_prefix /api
    reverse_proxy {$BACKEND_ORIGIN} {
      header_up Host tumensugalaa.mn  # ← Өөрчлөх
      header_up X-Forwarded-Proto {scheme}
      header_up X-Forwarded-For {remote}
      header_up X-Forwarded-Host tumensugalaa.mn  # ← Нэмэх
    }
  }

}